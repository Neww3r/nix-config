[colors]
background = #CC282A2E
background-alt = #373B41
foreground = #C5C8C6
primary = #00BBFF
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/bar]
tray-position = right
width = 100%
height = 24pt
radius = 0

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

