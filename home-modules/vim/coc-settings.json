{
    "suggest.noselect": true,
    "languageserver": {
        "nix": {
            "command": "nil",
            "filetypes": [
                "nix"
            ],
            "rootPatterns": [
                "flake.nix"
            ],
            "settings": {
                "nil": {
                    "formatting": {
                        "command": [
                            "nixpkgs-fmt"
                        ]
                    }
                }
            }
        }
    },
    "coc.preferences.formatOnSave": true,
    "inlayHint.enable": false,
    "clangd.enabled": true,
    "clangd.arguments": [
        "--enable-config",
        "--clang-tidy"
    ]
}
